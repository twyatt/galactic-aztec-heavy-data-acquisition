<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.main.MainController">
    <top>
        <ToolBar minWidth="-Infinity" prefWidth="600.0" BorderPane.alignment="CENTER">
            <items>
                <Label text="Host" />
                <TextField fx:id="hostTextField" prefWidth="150.0" text="" />
                <Button fx:id="connectButton" mnemonicParsing="false" onAction="#onConnect" text="Connect" />

                <Separator />

                <Label text="Display" />
                <HBox>
                    <children>
                        <ToggleButton mnemonicParsing="false" onAction="#onDisplayPSI" selected="true" styleClass="left-pill" text="PSI">
                            <toggleGroup>
                                <ToggleGroup fx:id="displayGroup" />
                            </toggleGroup>
                        </ToggleButton>
                        <ToggleButton mnemonicParsing="false" onAction="#onDisplayMillivolts" styleClass="right-pill" text="mV" toggleGroup="$displayGroup" />
                    </children>
                </HBox>

                <Separator />

                <Label text="Frequency" />
                <Slider fx:id="frequencySlider" max="60.0" prefWidth="100.0" value="1.0" />
                <Label fx:id="frequencyLabel" text="1" />
                <Label text="Hz" />

                <Separator orientation="VERTICAL" />

                <Button fx:id="recordButton" mnemonicParsing="false" onAction="#onRecord" text="Record" />

                <Separator orientation="VERTICAL" />

                <Label text="Latency" />
                <Label fx:id="latencyLabel" text="?" />
                <Label text="ms" />

                <Separator orientation="VERTICAL" />

                <Label text="Temperature" />
                <Label fx:id="temperatureLabel" text="?" />
                <Label text="°F" />

                <Separator orientation="VERTICAL" />

                <Label text="Signal" />
                <Label fx:id="signalLabel" text="?" />
                <Label text="dBm" />
            </items>
        </ToolBar>
    </top>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Pressures">
                    <content>
                        <GridPane fx:id="pressurePane">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>

                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>

                            <children>
                                <LineChart animated="false" createSymbols="false" legendSide="RIGHT" legendVisible="false" GridPane.rowIndex="1">
                                    <xAxis>
                                        <NumberAxis autoRanging="false" minorTickCount="10" side="BOTTOM" tickLabelsVisible="false" tickUnit="20.0" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis autoRanging="false" side="LEFT" tickLength="10.0" tickUnit="1000.0" upperBound="5000.0" />
                                    </yAxis>
                                </LineChart>
                                <LineChart animated="false" createSymbols="false" legendSide="RIGHT" legendVisible="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <xAxis>
                                        <NumberAxis autoRanging="false" minorTickCount="10" side="BOTTOM" tickLabelsVisible="false" tickUnit="20.0" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis autoRanging="false" side="LEFT" tickLength="10.0" tickUnit="1000.0" upperBound="5000.0" />
                                    </yAxis>
                                </LineChart>
                                <LineChart animated="false" createSymbols="false" legendSide="RIGHT" legendVisible="false" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <xAxis>
                                        <NumberAxis autoRanging="false" minorTickCount="10" side="BOTTOM" tickLabelsVisible="false" tickUnit="20.0" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis autoRanging="false" side="LEFT" tickLength="10.0" tickUnit="1000.0" upperBound="5000.0" />
                                    </yAxis>
                                </LineChart>
                                <LineChart animated="false" createSymbols="false" legendSide="RIGHT" legendVisible="false" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                    <xAxis>
                                        <NumberAxis autoRanging="false" minorTickCount="10" side="BOTTOM" tickLabelsVisible="false" tickUnit="20.0" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis autoRanging="false" side="LEFT" tickLength="10.0" tickUnit="1000.0" upperBound="5000.0" />
                                    </yAxis>
                                </LineChart>
                            </children>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="IMU">
                    <content>
                        <GridPane fx:id="imuPane">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <LineChart animated="false" createSymbols="false" legendSide="RIGHT">
                                    <xAxis>
                                        <NumberAxis autoRanging="false" label="Gyroscope (°/s)" minorTickCount="10" side="BOTTOM" tickLabelsVisible="false" tickUnit="20.0"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT" />
                                    </yAxis>
                                </LineChart>
                                <LineChart animated="false" createSymbols="false" legendSide="RIGHT" GridPane.columnIndex="1">
                                    <xAxis>
                                        <NumberAxis autoRanging="false" label="Accelerometer (g)" minorTickCount="10" side="BOTTOM" tickLabelsVisible="false" tickUnit="20.0"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT"/>
                                    </yAxis>
                                </LineChart>
                                <LineChart animated="false" createSymbols="false" legendSide="RIGHT" GridPane.columnIndex="2">
                                    <xAxis>
                                        <NumberAxis autoRanging="false" label="Inclinometer (g)" minorTickCount="10" side="BOTTOM" tickLabelsVisible="false" tickUnit="20.0"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT"/>
                                    </yAxis>
                                </LineChart>
                            </children>
                        </GridPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
