<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import com.lynden.gmapsfx.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1280.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.main.MainController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <Label text="Host" />
            <TextField fx:id="hostTextField" text="data1" />
            <Button fx:id="connectButton" mnemonicParsing="false" onAction="#onConnect" text="Connect" />
            <HBox />
            <Separator />
            <Label text="Frequency" />
            <Slider fx:id="frequencySlider" value="1.0" />
            <Label fx:id="frequencyLabel" text="1 Hz" />
            <Separator orientation="VERTICAL" />
            <Label text="Latency" />
            <Label fx:id="latencyLabel" text="?" />
            <Separator orientation="VERTICAL" />
            <Label text="Signal" />
            <Label fx:id="signalLabel" text="?" />
            <Label text="dBm" />
            <Separator orientation="VERTICAL" />
            <Label text="GPS" />
            <Label fx:id="gpsFixLabel" text="?" />
            <Label fx:id="gpsSatellitesLabel" text="?" />
            <Label text="Satellites" />
            <Separator orientation="VERTICAL" />
            <Label text="Power" />
            <Label fx:id="powerLabel" text="?" />
         </items>
      </ToolBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Sensors">
               <content>
                  <FlowPane fx:id="gaugePane" hgap="5.0" prefHeight="200.0" prefWidth="200.0" vgap="5.0" />
               </content>
          </Tab>
          <Tab text="GPS">
               <content>
                  <BorderPane fx:id="gpsBorderPane" prefHeight="200.0" prefWidth="200.0">
                     <right>
                        <VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <GridPane>
                                <columnConstraints>
                                  <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0" />
                                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <Label text="Latitude" />
                                    <Label text="Longitude" GridPane.rowIndex="1" />
                                    <Label fx:id="latitudeLabel" text="?" GridPane.columnIndex="1" />
                                    <Label fx:id="longitudeLabel" text="?" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="Altitude" GridPane.rowIndex="2" />
                                    <Label fx:id="altitudeLabel" text="?" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Button mnemonicParsing="false" onAction="#onCopyLatitude" text="Copy" GridPane.columnIndex="2" />
                                    <Button mnemonicParsing="false" onAction="#onCopyLongitude" text="Copy" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <Button fx:id="zeroAltitudeButton" mnemonicParsing="false" onAction="#onZeroAltitude" text="Zero" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                 </children>
                              </GridPane>
                              <Button mnemonicParsing="false" onAction="#onCenter" text="Center" />
                              <Button mnemonicParsing="false" onAction="#onAddMarker" text="Add Marker" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </VBox>
                     </right>
                     <center>
                        <Button mnemonicParsing="false" onAction="#onLoadMap" text="Load Map" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
